<div class="panel panel-default">
    <div class="panel-heading">
        <h2>メッセージ一覧</h2>
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-warning"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>
<hr>

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>投稿フォーム</h2>
    </div>
    <div class="panel-body">
        <%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>
            <div class="form-group">
                <label for="message_name" class="col-sm-2 control-label">名前</label>
                <div class= "col-sm-8">
                    <%= f.text_field :name, class: 'form-control' %>
                </div>
                <div class= "col-sm-2"></div>
            </div>
            
            <div class="form-group">
                <label for="message_body" class="col-sm-2 control-label">内容</label>
                <div class= "col-sm-8">
                    <%= f.text_area :body, class: 'form-control' %>
                </div>
                <div class= "col-sm-2"></div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <%= f.submit '送信', class: "btn btn-warning" %>  
                </div>
            </div>
        <% end %>
    </div>
</div>