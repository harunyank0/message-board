<div class="panel panel-default">
    <div class="panel-heading">
        <h2>メッセージ一覧</h2>
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-warning"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>
<br>

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>投稿フォーム</h2>
    </div>
    
    <div class="panel-body">
        <%= form_for(@message) do |f| %>
        
        <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                <li><%= full_message %></li>
                <% end %>                
            </ul>
        </div>
        <% end %>
        
        名前（必須　20文字以内）<br>
        <%= f.text_field :name %>
        <br><br>
        内容（必須　2~30文字）<br>
        <%= f.text_area :body %>
        <br><br>
        <input class="btn btn-sm btn-warning" type="submit" name="commit" value="送信" />
    </div>
</div>
        <% end %>