<div class="panel panel-default">
    <div class="panel-heading">
        <h2>メッセージ一覧</h2>
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-warning"><%= message.name %>(<%= message.age %>)</span>
            <%= message.body %>
            ｜<font size="2"><%= link_to "編集" , edit_message_path(message) %>
            <%= link_to "削除" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %></font>
            
            <br>
        <% end %>
    </div>
</div>



